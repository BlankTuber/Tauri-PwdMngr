{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "pwdmngr",
    "version": "0.1.0",
    "identifier": "no.quidque.pwdmngr",
    "build": {
        "frontendDist": "../src"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "pwdmngr",
                "width": 1200,
                "height": 750,
                "additionalBrowserArgs": "--disable-gpu"
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "linux": {
            "appimage": {
                "bundleMediaFramework": false,
                "files": {}
            },
            "deb": {
                "files": {}
            },
            "rpm": {
                "epoch": 0,
                "files": {},
                "release": "1"
            }
        }
    }
}
